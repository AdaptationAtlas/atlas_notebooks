{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DataSourceItem"
      }
    }
  },
  "required": [
    "data"
  ],
  "definitions": {
    "DataSourceItem": {
      "type": "object",
      "required": [
        "key",
        "sections",
        "sql"
      ],
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1,
          "description": "Unique identifier for this dataset entry. Cannot be empty."
        },
        "s3_path": {
          "type": [
            "string",
            "null"
          ],
          "description": "Full S3 URI of the dataset.",
          "default": null
        },
        "local_path": {
          "type": [
            "string",
            "null"
          ],
          "description": "Local filesystem path for caching.",
          "default": null
        },
        "description": {
          "type": [
            "string",
            "null"
          ],
          "description": "Human-readable explanation of the dataset.",
          "default": ""
        },
        "sections": {
          "type": "array",
          "description": "Tags indicating the UI sections or modules this dataset feeds.",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "stac": {
          "type": [
            "string",
            "null"
          ],
          "description": "STAC metadata object or reference URL.",
          "default": ""
        },
        "sql": {
          "type": "object",
          "description": "SQL query behavior for this dataset.",
          "required": [
            "table",
            "query"
          ],
          "properties": {
            "table": {
              "type": "boolean",
              "description": "Whether the dataset is loaded as a VIEW or TABLE in the database. Defaults to VIEW (false).",
              "default": false
            },
            "query": {
              "description": "Optional SQL query configuration.",
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "object",
                  "properties": {
                    "select": {
                      "type": [
                        "string",
                        "null"
                      ],
                      "description": "Columns to select in SQL format.",
                      "default": null
                    },
                    "where": {
                      "type": [
                        "array",
                        "null"
                      ],
                      "description": "List of WHERE conditions.",
                      "items": {
                        "type": "string"
                      },
                      "default": null
                    },
                    "customQuery": {
                      "type": [
                        "string",
                        "null"
                      ],
                      "description": "Full custom SQL string.",
                      "default": null
                    }
                  }
                }
              ],
              "default": null
            }
          },
          "default": {
            "table": false,
            "query": null
          }
        }
      },
      "additionalProperties": false
    }
  }
}
